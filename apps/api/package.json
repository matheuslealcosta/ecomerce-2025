    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "cache-manager": "^5.3.2",
    "cache-manager-redis-yet": "^4.1.2",
    "bullmq": "^4.15.0",
    "ioredis": "^5.3.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
